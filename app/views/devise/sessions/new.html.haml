%h2 Sign in
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "sign_in_user"}, :format => :json, :remote => true) do |f|
  %div
    = f.input :email, :required => false, :autofocus => true
  %div
    = f.input :password, :required => false
    = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
  %div
    = f.button :submit, "Sign in", class: 'btn btn-sucess btn-block'
= render "devise/shared/links"
