= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "sign_in_user"}, :format => :json, :remote => true) do |f|
  .modal-content
    .modal-header
      %h4.modal-title Iniciar sesión
    .error-messages
    
    .modal-body
      = f.input :email, :required => false, :autofocus => true, label: false, placeholder: "Correo electrónico", input_html: {class: "form-control"}
      = f.input :password, :required => false, label: false, placeholder: "Contraseña", input_html: {class: "form-control"}

    .modal-footer
  
      = f.button :submit, "Iniciar sesión", class: 'btn-primary btn-lg btn-block'

    %hr.login
      %p.footer
        ¿No tienes una cuenta? 
        =link_to "Registrate", "#", remote: true